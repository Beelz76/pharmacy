    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "Jwt": {
    "Issuer": "",
    "Audience": "",
    "ExpirationInHours": ""
  },
  "YooKassa": {
    "ReturnUrl": ""
  },
  "SmtpSettings": {
    "Host": "",
